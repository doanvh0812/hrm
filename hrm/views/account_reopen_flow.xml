            <field name="res_model">hrm.account.reopen.flow</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_account_reopen_flow_tree')}),
